{
  "version": 2,
  "builds": [
    {
      "src": "client/package.json",
      "use": "@vercel/next",
      "config": {
        "installCommand": "npm install"
      }
    },
    {
      "src": "server/api/*.py",
      "use": "@vercel/python"
    }
  ],
  "rewrites": [
    {
      "source": "/api/v1/:path*",
      "destination": "/server/api/index"
    },
    {
      "source": "/:path*",
      "destination": "/client/:path*"
    }
  ]
}
